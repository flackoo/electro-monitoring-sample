<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title </title>
	@Scripts.Render("~/bundles/defaults")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/chartjs")
	 <script src="~/Scripts/jquery-2.2.4.js"></script>  
	<script src="~/Scripts/bootstrap.js"></script>    
	<script src="~/js/default.js"></script> 
	@Styles.Render("~/bundles/defaults")
	@RenderSection("libs", required: false)
	@RenderSection("styles", required: false)
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top app-navbar">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a href="/electrometers/add" class="dropdown-toggle" href="#" aria-expanded="false" role="button" data-toggle="dropdown">
							Electrometers &nbsp;<i class="fa fa-caret-down"></i>
						</a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="/electrometers/add">Add &nbsp;<i class="fa fa-plus"></i></a>
							</li>
							<li>
								<a href="/electrometers/manage">Manage &nbsp;<i class="fa fa-cog"></i></a>
							</li>
						</ul>	 
					</li> 
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
	</div>
	<footer>
		<div style="position: relative;top: 50%;transform: translateY(-50%);" class="footer-content col-md-8  col-md-offset-2 text-center">
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</div>
	</footer>
	<script src="~/js/helpers.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
